<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/loginFragment"
    android:id="@+id/nav_graph.xml">

    <fragment
        android:id="@+id/mainFragment"
        android:name="beadando.isports_app.fragments.MainFragment"
        android:label="Főoldal"
        tools:layout="@layout/fragment_main" />

    <fragment
        android:id="@+id/loginFragment"
        android:name="beadando.isports_app.fragments.LoginFragment"
        android:label="Bejelentkezés"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="beadando.isports_app.fragments.RegisterFragment"
        android:label="Regisztráció"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/addEventFragment"
        android:name="beadando.isports_app.fragments.AddEventFragment"
        android:label="fragment_add_event"
        tools:layout="@layout/fragment_add_event" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="beadando.isports_app.fragments.ProfileFragment"
        android:label="Profile">
        <action
            android:id="@+id/action_profileFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
    </fragment>

    <fragment
        android:id="@+id/editProfileFragment"
        android:name="beadando.isports_app.fragments.EditProfileFragment"
        android:label="Edit Profile" />


</navigation>